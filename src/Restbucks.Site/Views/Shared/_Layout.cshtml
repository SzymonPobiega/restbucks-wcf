<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>*@
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-22199921-1']);
        _gaq.push(['_setDomainName', '.restbucks.net']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
</script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1><a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/images/logo_150.png")" alt="Restbucks logo" title="Logo"/></a></h1>
                <h2>@Resources.LayoutRes.Title</h2>
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink(@Resources.LayoutRes.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(@Resources.LayoutRes.Presentation, "Presentation", "Home")</li>
                    <li>@Html.ActionLink(@Resources.LayoutRes.API, "Index", "API")</li>
                    <li>@Html.ActionLink(@Resources.LayoutRes.Tutorials, "Index", "Tutorials")</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
                Copyright 2011 Szymon Pobiega. Graphic design by @@AgaCosmic
            </div>
        </div>
    </div>
</body>
</html>
